@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area=""}, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown notifications-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-bell-o"></i>
                    <span class="label label-info countLBR"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <!-- inner menu: contains the actual data -->
                        <ul class="menu">
                            
                        </ul>
                    </li>
                    <li class="footer"><a href="/Event/GetAllForUser">@Common.ViewAll</a></li>
                </ul>
            </li>
            <li>
                <a href="/Account/Details/@User.Identity.GetUserId()">@Common.Hello @User.Identity.GetUserName() </a>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">@Common.LogОff</a></li>
        </ul>@Common.LogОff
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
