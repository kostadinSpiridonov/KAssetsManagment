    <script src="~/Scripts/Dashboard/app.min.js"></script>
    <script src="~/Scripts/Dashboard/demo.js"></script>

    
    <script>
        //Create graphic for aquired assets
        var dataAq = [];

        @foreach (var item in Model.AquiredAssets)
	        {
              @:dataAq.push({ y: "@item.Date", item1: parseInt("@item.Value") });
                                                                        	}

        var area = new Morris.Area({
            element: 'aquiredAssets-chart',
            resize: true,
            data: dataAq,
            xkey: 'y',
            ykeys: ['item1'],
            labels: ['@Common.Count'],
            xLabels: "month",
            lineColors: ['#a0d0e0'],
            hideHover: 'auto'

        });

        $('.box ul.nav a').on('shown.bs.tab', function () {
            area.redraw();
        });
    </script>

