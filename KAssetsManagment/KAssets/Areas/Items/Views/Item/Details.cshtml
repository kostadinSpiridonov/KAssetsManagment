@model KAssets.Areas.Items.Models.ItemDetailsViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    dd {
        height: 1.6em; /* or whatever - but use ems :) */
    }
</style>
<h2>@Common.Details   </h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateOfManufacture)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfManufacture)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Producer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Producer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Brand)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Brand)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ItemModel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemModel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price) @(" "+Model.Currency)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RotatingItem)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RotatingItem)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
@if (KAssets.Controllers.StaticFunctions.IsHasRihgt("Manage items", User.Identity.GetUserId())&&Model.Status=="Active")
{
    <div class="row col-md-offset-1">
        <div class="col-md-1">
            <a href="/Items/Item/Edit/@Model.Id" class="btn btn-primary float-right">@Common.Edit</a>
        </div>
        <div class="col-md-2">
            @Html.ActionLink(Common.Delete, "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
        </div>
    </div>
}
<br />
@if(Model.Status=="Active")
{
    <a href="/Items/Item/GetAll">@Common.BackToList</a>
}
else
{
    <a href="/Items/Item/GetAllDeleted">@Common.BackToList</a>
}