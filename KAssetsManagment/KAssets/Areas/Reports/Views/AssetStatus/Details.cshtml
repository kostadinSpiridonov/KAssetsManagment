@model KAssets.Areas.AssetsActions.Models.AssetDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    dd {
        height: 1.6em; /* or whatever - but use ems :) */
    }
</style>
<h2>
    @Common.Details
</h2>
<div>
    <hr />


    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.InventoryNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InventoryNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Producer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Producer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Brand)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Brand)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ItemModel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemModel)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Guarantee)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Guarantee)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            @Enum.GetName(typeof(KAssets.Models.TypesOfAsset), Model.Type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price) @(" "+Model.Currency)
        </dd>
        <dt>           
             @Html.DisplayNameFor(model => model.SiteName)
        </dt>
        <dd>
            @Model.SiteName
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Model.Status
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Model.UserName
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd style="height:auto">
            @if (Model.Location != null)
            {
                <div>
                    @if (Model.Location.Country != null)
                    {
                        @Model.Location.Country
                    }
                    @if (Model.Location.Town != null)
                    {
                        @Model.Location.Town
                    }
                    @if (Model.Location.Street != null)
                    {
                        @Model.Location.Street
                    }
                    @((Model.Location.StreetNumber != null && Model.Location.StreetNumber.Value != 0 ? Model.Location.StreetNumber.Value.ToString() : ""))
                    @Model.Location.Latitude @Model.Location.Longitude
                </div>
                <div>
                    @Html.Partial("~/Areas/HelpModule/Views/Location/_Location.cshtml", @Model.Location)
                </div>
            }
        </dd>
    </dl>
</div>
