@model KAssets.Areas.Reports.Models.CreateAssetRelocationsReportViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<link href="~/Content/styles.css" rel="stylesheet" />
<h2>@Reports.GetAllRelAsset</h2>

<div id="assets" class="hidden " title="@Reports.ChooseAsset">
</div>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Result", "AssetRelocationsReport"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(m => m.SelectedAsset, new { @class = "col-md-2 control-label" })
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.SelectedAsset, new { @class = "form-control", readOnly = "readOnly" })
                        @Html.ValidationMessageFor(m => m.SelectedAsset, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.ActionLink(@Common.Choose, "ChooseAsset", null, new { @class = "chooseAsset btn btn-default" })
                    </div>
                </div>
                <div class="col-md-12">
                    <hr />
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-2 margin-r-5">
                        <input type="submit" value="@Reports.Result" class="btn btn-default" />
                    </div>
                    <div class="col-md-6">
                        <a href="/Home/Index" class="btn btn-default">@Common.Cancel</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6" style="margin-top:30px" id="assetDetails">

    </div>
</div>

@section Scripts
{
    <script src="~/Areas/Reports/Scripts/AssetRelocationReportCreateJs.js"></script>
}