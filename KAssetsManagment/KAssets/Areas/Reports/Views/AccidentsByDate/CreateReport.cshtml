@model KAssets.Areas.Reports.Models.CreateAccidentesByDateReport

@{
    ViewBag.Title = "CreateReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .inline {
        display: inline;
    }
    
    .margin-left-10px {
        margin-left: 10px !important;
    }
</style>
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<link href="~/Content/styles.css" rel="stylesheet" />
<h2>@Reports.GetAllAccForDate</h2>

@using (Html.BeginForm("Result", "AccidentsByDate"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ORorAND, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label>@Html.RadioButtonFor(x => x.ORorAND, true, new { @class = "margin-left-10px"}) @Common.Or</label>
                <label>@Html.RadioButtonFor(x => x.ORorAND, false, new { @class = "margin-left-10px",@checked="checked" }) @Common.And</label>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DateOfSend, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateOfSend, new { htmlAttributes = new { @class = "form-control date-picker inline" } })
                @Html.ValidationMessageFor(model => model.DateOfSend, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateOfReply, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateOfReply, new { htmlAttributes = new { @class = "form-control date-picker inline" } })
                @Html.ValidationMessageFor(model => model.DateOfReply, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-1 margin-r-5">
                <input type="submit" value="@Reports.Result" class="btn btn-default " />
            </div>
            <div class="col-md-8">
                <a href="/Home/Index" class="btn btn-default">@Common.Cancel</a>
            </div>
        </div>
    </div>
}
@section Scripts
{
<script src="~/Areas/Reports/Scripts/CreateDatePicker.js"></script>
}