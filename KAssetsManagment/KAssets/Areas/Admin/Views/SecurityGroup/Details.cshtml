@model KAssets.Areas.Admin.Models.DetailsSecurityGroupViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
    <dl class="dl-horizontal">
        <dt>@Common.Rights: </dt>
        @foreach (var item in Model.Rights)
        {
            <dd>
                @item.Name
            </dd>
        }
    </dl>
    @if (Model.Name != KAssets.Resources.BaseAdmin.BaseGroup)
    {
        <div class="col-lg-offset-2">
            <a class="btn btn-primary" href="/Admin/SecurityGroup/Edit/@Model.Id">@Common.Edit</a>
        </div>
    }
</div>
<p>
    @Html.ActionLink(@Common.BackToList, "GetAll")
</p>
