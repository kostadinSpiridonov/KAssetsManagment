@model IEnumerable<KAssets.Areas.Orders.Models.ViewSentRequestToProviderViewModel>
@{
    ViewBag.Title = "Sent requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ProviderOrderTr.SentRequests</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<table class="table">
    <tr>
        <th>
            @Html.DisplayName(Common.To)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().EmailSubject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfSend)
        </th>
    </tr>

    @foreach (var item in Model)
    {


        <tr class="email" id="@item.Id">

            <td>
                @Html.DisplayFor(modelItem => item.FromName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.EmailSubject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfSend)
            </td>

            <td>
                @Html.ActionLink(Common.View, "ViewHistoryRequest/", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
@if (Model.Count() == 0)
{
    <h4>@ScrappingTr.NoHistory</h4>
}