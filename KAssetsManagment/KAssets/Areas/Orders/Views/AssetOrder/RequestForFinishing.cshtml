@model IEnumerable<KAssets.Areas.Orders.Models.RequestForAssetViewModel>
@{
    ViewBag.Title = "Requests for finishing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@AssetOrderTr.RequestsForFinishing</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.From)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfSend)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
               @item.From.FullName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfSend)
            </td>
            <td>
                <a class="btn btn-default" href="/Orders/AssetOrder/GetRequestForFinishingOrFinished/@item.Id">@Common.View</a>
            </td>
        </tr>
    }

</table>

@if(Model.Count()==0)
{
    <h4>@AssetOrderTr.NoRequestsForFinishing</h4>
}