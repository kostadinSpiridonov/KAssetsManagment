@model IEnumerable<KAssets.Areas.Items.Models.ItemViewModel>

<link href="~/Content/CssKAssets/ChooseWindow.css" rel="stylesheet" />
<br />
<div class="row">
    <div class="col-md-12">
        <select class="form-control display-inline width-170px" id="searchBy">
            <option value="Brand">
                @Html.DisplayNameFor(model => model.First().Brand)
            </option>
            <option value="Model">
                @Html.DisplayNameFor(model => model.First().Model)
            </option>
            <option value="Price">
                @Html.DisplayNameFor(model => model.First().Price)
            </option>
        </select>
        <input type="text" class="form-control display-inline width-250px" id="searchValue" />
    </div>
</div>
<br />
<div class="tableOuter">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="item">
                <td class="brand">
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td class="model">
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td class="price">
                    @Html.DisplayFor(modelItem => item.Price)
                    @Html.DisplayFor(modelItem => item.Currency)
                </td>
                <td>
                    <input type="checkbox" value="Choose" class="item" id="@(item.Id)f" />

                    <input type="hidden" value="@item.Price" />
                    <input type="hidden" value="@item.Currency" />
                    <input type="hidden" value="@item.CurrencyCourse" />
                </td>
            </tr>
        }

    </table>
</div>
<div class="row">
    <button class="btn btn-default col-md-offset-4 col-md-2" id="chooseBtn">@Common.Choose</button>
</div>
