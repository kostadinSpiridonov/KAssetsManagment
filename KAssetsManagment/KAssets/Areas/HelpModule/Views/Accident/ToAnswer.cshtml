@model IEnumerable<KAssets.Areas.HelpModule.Models.ListAccidentViewModel>

@{
    ViewBag.Title = "To asnwer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@AccidentTr.AccidentToAnswer</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.From)
        </th>
        <th>
            @Html.DisplayName(KAssets.Resources.Translation.ReportsArea.Reports.DateOfSend)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.From)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink(Common.View, "ViewAccidentToAnswer", new { id = item.Id }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
@if(Model.Count()==0)
{
    <h4>@AccidentTr.NoAccidentsToAnswer</h4>
}